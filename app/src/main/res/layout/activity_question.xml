<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.distributedtrivia.QuestionActivity">

    <TextView android:text="Question" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roundNumber" />

    <TextView
        android:text="Position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentPosition"
        android:layout_alignTop="@+id/roundNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="sadfjjladsfljk?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionText"
        android:layout_below="@+id/roundNumber"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO SLOW"
        android:id="@+id/goSlow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/questionText"
        android:layout_alignEnd="@+id/questionText"
        android:height="50dp"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/go"
        android:height="100dp"
        android:textSize="24dp"
        android:layout_above="@+id/goSlow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/answerD"
        android:height="50dp"
        android:textSize="16dp"
        android:layout_above="@+id/go"
        android:layout_alignRight="@+id/go"
        android:layout_alignEnd="@+id/go"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/answerC"
        android:height="50dp"
        android:textSize="16dp"
        android:layout_above="@+id/answerD"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/answerB"
        android:height="50dp"
        android:textSize="16dp"
        android:layout_above="@+id/answerC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/answerA"
        android:height="50dp"
        android:textSize="16dp"
        android:layout_above="@+id/answerB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/answerB"
        android:layout_alignEnd="@+id/answerB" />

</RelativeLayout>
