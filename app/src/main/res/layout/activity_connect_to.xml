<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.distributedtrivia.ConnectTo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Connect To"
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffffff"
        android:background="#D53115"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="IP Address"
        android:id="@+id/txtIP"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:background="#E65419"
        android:layout_marginTop="2dp"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Combatants"
        android:id="@+id/txtCombatants"
        android:gravity="center_vertical|center_horizontal"
        android:background="#F18120"
        android:layout_below="@+id/txtIP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/lstCombatants"
        android:layout_below="@+id/txtCombatants"
        android:layout_centerHorizontal="true"
        android:background="#FFAD58" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Waiting To Start..."
        android:id="@+id/txtWaiting"
        android:layout_below="@+id/lstCombatants"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#FFF9F4"
        android:gravity="center_vertical|center_horizontal" />
</RelativeLayout>
